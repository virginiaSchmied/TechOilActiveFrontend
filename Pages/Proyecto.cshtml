<div class="container">

    <form class="formularios" method="post">
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" class="form-control" />
        </div>

        <div class="form-group">
            <label for="direccion">Direccion:</label>
            <input type="text" id="direccion" name="direccion" class="form-control" />
        </div>
        <div class="form-group">
            <label for="estado">Estado:</label>
            <input type="number" id="estado" name="estado" class="form-control" max="3" min="1" />
        </div>
        <button asp-page-handler="CrearProyecto" type="submit" class="btn btn-primary">Enviar</button>
    </form>


    <table class="table">
        <thead>
         <tr>
            <th>Codigo del proyecto</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Estado</th>
        </tr>
        </thead>

  <tbody>
        
        @foreach (var proyecto in Model.Proyecto)
        {
            if (proyecto != null)
                {
                <tr>
                <td>@proyecto.codProyecto</td>
                <td>@proyecto.nombre</td>
                <td>@proyecto.direccion</td>
                <td>@proyecto.estado</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@proyecto.codProyecto" class="btn btn-primary">Editar</a>
                    <form asp-page-handler="Delete" asp-route-id="@proyecto.codProyecto" method="post">
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </td>
            </tr>
                }
        }
    </table>
  </tbody>
</div>
       



